=breadcrumb_tag do
  %li.breadcrumb-item
    = link_to <%= plural_table_name.classify %>.model_name.human(count: 'other'), <%= table_name %>_path
  %li.breadcrumb-item.active
    = t('views.entites.<%= table_name %>.new.title')

%h1= t('views.entites.<%= table_name %>.new.title')

= render 'form'

= link_to (fa_icon 'reply' ,text: t('views.general.links.back') ), <%= index_helper %>_path, class: 'btn btn-secondary'
