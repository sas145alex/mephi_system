
= link_to 'New Person', new_person_path, class: 'btn btn-primary pull-right'

%h1 Listing people
%table.table.table-hover.table-striped
  %thead
    %tr
      %th First name
      %th Last name
      %th Second name
      %th Birthday
      %th Passport
      %th
      %th
      %th

  %tbody
    - @people.each do |person|
      %tr
        %td= person.first_name
        %td= person.last_name
        %td= person.second_name
        %td= person.birthday
        %td= person.passport
        %td= link_to_show(person)
        %td= link_to_edit(edit_person_path(person))
        %td= link_to_destroy(person)

%br
