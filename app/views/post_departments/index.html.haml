= link_to t('views.general.links.new'), new_post_department_path, class: 'btn btn-primary pull-right'

%h1= t('views.entites.post_departments.index.title')
%table.table.table-hover.table-striped
  %thead
    %tr
      %th= PostDepartment.human_attribute_name(:post)
      %th= PostDepartment.human_attribute_name(:department)
      %th= PostDepartment.human_attribute_name(:worker)
      %th
      %th
      %th

  %tbody
    - @post_departments.each do |post_department|
      %tr
        %td= post_department.post
        %td= post_department.department
        %td= post_department.worker
        %td= link_to_show(post_department)
        %td= link_to_edit(edit_post_department_path(post_department))
        %td= link_to_destroy(post_department)

%br
