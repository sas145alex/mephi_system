=breadcrumb_tag do
  %li.breadcrumb-item
    = link_to Post.model_name.human(count: 'other'), posts_path
  %li.breadcrumb-item
    = link_to "#{@post.id}", @post
  %li.breadcrumb-item.active
    = t('views.entites.posts.edit.title')

%h1= t('views.entites.posts.edit.title')

= render 'form'

%div.mt-3
  = link_to_show(@post)
  \|
  = link_to (fa_icon 'reply' ,text: t('views.general.links.back') ), posts_path, class: 'btn btn-secondary'
  \|
  = link_to_destroy(@post)
