=breadcrumb_tag do
  %li.breadcrumb-item
    = link_to Post.model_name.human(count: 'other'), posts_path
  %li.breadcrumb-item.active
    = "#{@post.id}"

%h1= t('views.entites.posts.show.title')

%p#notice= notice

%dl.row
  %dt.col-sm-2
    %b= Post.human_attribute_name(:code)
  %dd.col-sm-10
    = @post.code
  %dt.col-sm-2
    %b= Post.human_attribute_name(:name)
  %dd.col-sm-10
    = @post.name
  %dt.col-sm-2
    %b= Post.human_attribute_name(:manager)
  %dd.col-sm-10
    = @post.manager

%td= link_to_edit(edit_post_path(@post))
\|
= link_to (fa_icon 'reply' ,text: t('views.general.links.back') ), posts_path, class: 'btn btn-secondary'
