=breadcrumb_tag do
  %li.breadcrumb-item.active
    = Post.model_name.human(count: 'other')

= link_to t('views.general.links.new'), new_post_path, class: 'btn btn-primary pull-right'

%h1= t('views.entites.posts.index.title')
%table.table.table-hover.table-striped
  %thead
    %tr
      %th= Post.human_attribute_name(:code)
      %th= Post.human_attribute_name(:name)
      %th= Post.human_attribute_name(:manager)
      %th= Post.human_attribute_name(:departments)
      %th= Post.human_attribute_name(:workers)
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.code
        %td= post.name
        %td= post.manager
        %td= post.departments.map {|d| d.name}.join(', ')
        %td= post.worker_ids
        %td= link_to_show(post)
        %td= link_to_edit(edit_post_path(post))
        %td= link_to_destroy(post)

%br
