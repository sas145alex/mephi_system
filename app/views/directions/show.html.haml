%h1= t('views.entites.directions.show.title')

%p#notice= notice

%h3= t('views.entites.directions.form_blocks.direction_forms')
%hr

%dl.row.show-entity
  %dt.col-sm-4
    %b= Direction.human_attribute_name(:name)
  %dd.col-sm-8
    = @direction.name
  %dt.col-sm-4
    %b= Direction.human_attribute_name(:status)
