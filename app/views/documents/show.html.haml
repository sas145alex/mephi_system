=breadcrumb_tag do
  %li.breadcrumb-item
    = link_to Document.model_name.human(count: 'other'), documents_path
  %li.breadcrumb-item.active
    = @document.id

%h1= t('views.entites.documents.edit.title')

%p#notice= notice

%dl.row.show-entity
  %dt.col-sm-3
    %b= Document.human_attribute_name(:doc)
  %dd.col-sm-9
    = link_to_download_file(@document)
  %dt.col-sm-3
    %b= Document.human_attribute_name(:name)
  %dd.col-sm-9
    = @document.name
  %dt.col-sm-3
    %b= Document.human_attribute_name(:type)
  %dd.col-sm-9
    = @document.type
  %dt.col-sm-3
    %b= Document.human_attribute_name(:task)
  %dd.col-sm-9
    = @document.task
  %dt.col-sm-3
    %b= Document.human_attribute_name(:direction)
  %dd.col-sm-9
    = @document.direction

%td= link_to_edit(edit_document_path(@document))
\|
= link_to (fa_icon 'reply' ,text: t('views.general.links.back') ), documents_path, class: 'btn btn-secondary'
\|
= link_to_destroy(@document)
