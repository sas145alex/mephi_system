!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MephiSystem
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'application/header_nav'
    = render 'flash_messages'

    #wrapper.container-fluid
      .row
        -# #sidebar-toggler
        = link_to '#sidebar', class: '',
        id: 'sidebar-toggler', remote: 'true' do
          %i.fa.fa-navicon.fa-lg

        -# Клик по toggler использует скрипты, которые убираеют
        -# или добавляют классы bootstap для адаптивности сайдбара
        -# на nav и main
        %nav{class: 'col-sm-3 col-lg-2 bg-faded col-xs-12 sidebar d-none d-sm-block', id: 'sidebar'}
          = render 'sidebar_content'

        %main{class: 'col-sm-9 offset-sm-3 col-lg-10 offset-lg-2 col-xs-12 offset-xs-0 pt-3'}
          -if content_for? :breadcrumb
            = yield :breadcrumb
          -if content_for? :error_messages
            = yield :error_messages
          = yield


    -# #wrapper.container.d-flex
    -#   = render 'application/sidebar'
    -#   #main-content.container.mt-3
    -#     -# some text in main container
    -#     = yield
