=breadcrumb_tag do
  %li.breadcrumb-item.active
    = Task.model_name.human(count: 'other')

= link_to t('views.general.links.new'), new_task_path, class: 'btn btn-primary pull-right'

%h1= t('views.entites.tasks.index.title')
%table.table.table-hover.table-striped
  %thead
    %tr
      %th= Task.human_attribute_name(:direction)
      %th= Task.human_attribute_name(:description)
      %th= Task.human_attribute_name(:status)
      %th.links

  %tbody
    - @tasks.each do |task|
      %tr
        %td
          = link_to task.direction.name, directions_path(task.direction)
        %td= task.description
        %td= task.status
        %td.links
          = link_to_show(task, '')
          = link_to_show_delegation_to_me(task, '')
          -# = link_to_show(task, '')

%br
